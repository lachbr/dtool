#!/usr/local/bin/perl

$tool = $ENV{"DTOOL"} ;
if ( $tool eq "" ) {
   die "Environment not configured to run CTtools" ;
}

require "$tool/include/ctproj.pl" ;

@arglist = @ARGV ;

$prntroot = 0 ;
if ( $arglist[0] =~ /^-r/ ) {
   $prntroot = 1 ;
   shift( @arglist ) ;
} elsif ( $arglist[0] =~ /^-p/ ) {
   $prntpkg = 1 ;
   shift( @arglist ) ;
}

if ( @arglist == () ) {
   $proj = &CTProj ;
} else {
   $proj = &CTProj( $arglist[0] ) ;
}

if ( $prntroot ) {
   print &CTProjRoot( $proj ) ;
} elsif ( $prntpkg ) {
   print &CTProjPkg( $proj ) ;
} else {
   print $proj ;
}

print "\n" ;
