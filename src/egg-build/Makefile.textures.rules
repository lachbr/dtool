#
# Makefile rules for converting texture maps from characters to rgb format
# and/or reducing them.
#

ifeq ($(DEFAULT_SIZE),)
  DEFAULT_SIZE = -2
endif


RESIZE = image-resize
DEF_RESIZE = $(RESIZE) $(DEFAULT_SIZE)

all:

maps/%.rgb:
	$(DEF_RESIZE) $< $@

maps/%.rgba:
	$(DEF_RESIZE) $< $@


ifneq ($(FULL_SIZE),)
$(patsubst %,maps/%,$(FULL_SIZE)) : % :
	$(DEF_RESIZE) -x 100% $< $@
endif

ifneq ($(HALF_SIZE),)
$(patsubst %,maps/%,$(HALF_SIZE)) : % :
	$(DEF_RESIZE) -x 50% $< $@
endif

ifneq ($(QUARTER_SIZE),)
$(patsubst %,maps/%,$(QUARTER_SIZE)) : % :
	$(DEF_RESIZE) -x 25% $< $@
endif
